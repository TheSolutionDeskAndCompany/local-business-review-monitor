# Database - Replace with your MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/review-monitor

# JWT Secret - Generate a secure random string
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google Business Profile API - Get from Google Cloud Console
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Service - Use Gmail App Password or SendGrid
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASS=your-app-password

# Serverless Function Environment Variables
APP_NAME=ReviewReady
APP_URL=http://localhost:3000
RESET_TOKEN_SECRET=your-super-secret-reset-token-key-change-this-in-production
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-gmail@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=ReviewReady <no-reply@reviewready.ca>

# MongoDB Atlas
MONGODB_URI=mongodb://localhost:27017/reviewready
MONGODB_DB=reviewready

# Stripe - Get from Stripe Dashboard
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# App Settings
NODE_ENV=production
PORT=5000
CLIENT_URL=https://your-domain.com
