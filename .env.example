# ==== Server (Vercel Functions) ====
NODE_ENV=production
PORT=3000

# Database
MONGODB_URI=
ENCRYPTION_KEY=32byte_secret_key_min                       # exactly 32 chars for AES-256-GCM
ADMIN_TOKEN=change-me                                      # protects /api/setup

# JWT
JWT_SECRET=your-super-secret-jwt-key-here

# Google Business Profile API
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Service
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=ReviewReady <no-reply@reviewready.ca>

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ==== Client (CRA requires REACT_APP_ prefix) ====
REACT_APP_SITE_NAME=ReviewReady
REACT_APP_CANONICAL_DOMAIN=https://reviewready.ca          # or your current Vercel URL
REACT_APP_ANALYTICS_PROVIDER=none                          # 'plausible' or 'none'
REACT_APP_PLAUSIBLE_DOMAIN=reviewready.ca
REACT_APP_SENTRY_DSN=
REACT_APP_SHOW_SOCIAL_PROOF=false                          # keep false until you have real numbers

# App URLs
REACT_APP_API_URL=/api
REACT_APP_CLIENT_URL=http://localhost:3000
