# ==== Server (Vercel Functions) ====
NODE_ENV=production
PORT=3000

# Database
MONGODB_URI=
ENCRYPTION_KEY=32byte_secret_key_min                       # exactly 32 chars for AES-256-GCM
ADMIN_TOKEN=change-me                                      # protects /api/setup

# JWT
JWT_SECRET=your_32_character_jwt_secret_here
JWT_EXPIRES_IN=7d

# Email (using Resend)
RESEND_API_KEY=re_123456789
EMAIL_FROM=noreply@reviewready.ca
EMAIL_REPLY_TO=support@reviewready.ca

# Frontend URLs (for email templates and CORS)
FRONTEND_URL=https://reviewready.ca
RESET_PASSWORD_URL=/reset-password

# Admin (required for /api/setup)
ADMIN_TOKEN=change-me-to-a-strong-secret

# Security
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
ENCRYPTION_KEY=32_character_encryption_key_here  # Must be exactly 32 characters for AES-256-GCM

# Logging
LOG_LEVEL=info

# Feature Flags (set to 'true' to enable)
ENABLE_GOOGLE_OAUTH=false
ENABLE_STRIPE=false
ENABLE_SENTRY=false

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID=

# Sentry (optional)
SENTRY_DSN=

# ==== Client (CRA requires REACT_APP_ prefix) ====
REACT_APP_SITE_NAME=ReviewReady
REACT_APP_CANONICAL_DOMAIN=https://reviewready.ca
REACT_APP_ANALYTICS_PROVIDER=none                          # 'plausible' or 'none'
REACT_APP_PLAUSIBLE_DOMAIN=reviewready.ca
REACT_APP_SENTRY_DSN=

# App URLs
REACT_APP_API_URL=/api
REACT_APP_CLIENT_URL=http://localhost:3000
